generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum StatusUsuario {
  online
  em_partida
  offline
  banido
}

enum CargoUsuario {
  adm
  jogador
}

enum StatusPartida {
  em_espera
  em_andamento
  finalizado
}

enum TipoItemLoja {
  deck
  avatar
  fundo
}

enum DisponibilidadeItem {
  disponivel
  indisponivel
}

model Usuario {
  id               Int              @id @default(autoincrement())
  email            String           @unique
  senha            String
  nome             String
  moedas           Int              @default(0)
  data_criacao     DateTime         @default(now())
  partidas_ganhas  Int              @default(0)
  partidas_totais  Int              @default(0)
  avatar_ativo     Int
  avatar_variante  Int
  fundo_ativo      Int
  deck_ativo       Int
  status           StatusUsuario
  cargo            CargoUsuario
  jogadorPartidas  JogadorPartida[]
  itens            ItemUsuario[]
  partidasCriadas   Partida[]        @relation("CriadorPartida")
  partidasGanhas    Partida[]        @relation("GanhadorPartida")
}

model Partida {
  id              Int              @id @default(autoincrement())
  nome            String
  data_inicio     DateTime         @default(now())
  data_fim        DateTime?        
  status          StatusPartida
  vagas           Int              @default(1)
  senha           String?          
  jogadores       JogadorPartida[]
  criador_id   Int
  ganhador_id  Int?
  criador      Usuario   @relation("CriadorPartida", fields: [criador_id], references: [id])
  ganhador     Usuario?  @relation("GanhadorPartida", fields: [ganhador_id], references: [id])
}

model JogadorPartida {
  id              Int              @id @default(autoincrement())
  partida         Partida          @relation(fields: [partida_id], references: [id])
  partida_id      Int
  usuario         Usuario          @relation(fields: [usuario_id], references: [id])
  usuario_id      Int
  ordem_jogada    Int
  pontuacao       Int              @default(0)
}

model ItemLoja {
  id              Int              @id @default(autoincrement())
  nome            String
  tipo            TipoItemLoja
  disponibilidade DisponibilidadeItem
  preco           Int
  usuarios        ItemUsuario[]
}

model ItemUsuario {
  id            Int        @id @default(autoincrement())
  usuario       Usuario    @relation(fields: [usuario_id], references: [id])
  usuario_id    Int
  itemLoja      ItemLoja   @relation(fields: [item_loja_id], references: [id])
  item_loja_id  Int
}
